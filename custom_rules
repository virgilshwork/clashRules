######## æ‰§è¡ŒæŒ‡ä»¤
sed -i "/$VAR1/r VAR1" hellcat.ini
sed -i "/$VAR2/r VAR2" hellcat.ini
checkPoint=0
fromText=""
cat replaceText | while read line
do
  if [ $checkPoint -eq "0" ]; then
        fromText=$line
        checkPoint=1
  else
        sed -i "s/${fromText//\[/\\[}/${line//\[/\\[}/g" hellcat.ini
        checkPoint=0
  fi
done
